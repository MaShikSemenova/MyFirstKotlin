<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="StyleTextBackButton" parent="StyleText">
        <item name="android:textColor">@color/text_back_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="StyleTextAge" parent="StyleText">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="StyleTextTitle" parent="StyleText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/great_text</item>
    </style>
    <style name="StyleTextPink" parent="StyleText">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/text_pink</item>
    </style>
    <style name="StyleTextReview" parent="StyleText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
    <style name="StyleTextStoryline" parent="StyleText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>
    <style name="StyleTextDescription" parent="StyleText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/text_description</item>
    </style>
    <style name="StyleTextActor" parent="StyleText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="StyleRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/text_grey</item>
        <item name="colorControlActivated">@color/text_pink</item>
    </style>
    <style name="StyleImageActor">
        <item name="android:layout_width">@dimen/image_size_actor</item>
        <item name="android:layout_height">@dimen/image_size_actor</item>
        <item name="android:layout_marginTop">@dimen/half_standart_margin</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>